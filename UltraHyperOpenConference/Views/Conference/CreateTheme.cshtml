@using UltraHyperOpenConference.Controllers
@model dynamic

@{
    ViewData["Title"] = "Login";
    var error = TempData[HomeController.ErrorTempDataKey] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <p class="card alert-danger" style="padding: 20px;">@error</p>
}

<div class="card">
    <form method="post">
        <div class="form-group">
            <label>Theme</label>
            <input name="theme" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label>Start message</label>
            <input name="startMessage" class="form-control" type="text">
        </div>
        <div class="form-group">
            <button type="submit" value="createTheme" class="btn btn-primary btn-block"> Create </button>
        </div>
    </form>
</div>