@using Microsoft.AspNetCore.Http
<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" >Hello @User.Identity.Name!</a>
        </li>
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn-primary nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
        </li>
        
        <li class="nav-item">
            <a class="btn-primary nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registration">Registration</a>
        </li>
    }
</ul>